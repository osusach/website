---
import Layout from "../layouts/Layout.astro";
import ProjectInDevelopment from "../components/ProjectInDevelopment.astro";
import ActiveProject from "../components/ActiveProject";
import { developmentProjects, activeProjects } from "../projects";
---

<Layout title="Open Source USACH">
  <div class="mx-0 w-full pb-4 md:mx-auto ">
    <div
      class="mx-auto flex flex-col items-center justify-between pt-14 md:my-[6rem] md:flex-row md:pt-0"
    >
      <div class="text-center md:text-left">
        <h2 class="text-3xl font-semibold md:w-[50vw] xl:w-[25vw] md:text-4xl">
          Comunidad de estudiantes de la Universidad de Santiago de Chile
        </h2>
        <p>colaborando en proyectos <br class="md:hidden" /> open-source</p>
      </div>
      <div class="mt-10 flex flex-col items-center md:mt-0">
        <p class="text-center text-xl font-semibold">¿Quiéres ser parte?</p>
        <div
          class="my-2 flex w-full animate-bounce items-center justify-center rounded-badge bg-secondary py-4 ease-in-out hover:animate-none motion-reduce:animate-none"
        >
          <a
            href="/unete"
            class="link-hover link text-center text-3xl font-semibold text-secondary-content md:text-5xl"
            >Únete</a
          >
        </div>
      </div>
    </div>
    <section class="my-4">
      <h2 class="divider divider-neutral mt-10 text-lg font-bold">
        Proyectos activos
      </h2>
      <div class="grid grid-cols-1 gap-4 md:grid-cols-3">
        {activeProjects.map((project) => <ActiveProject {...project} />)}
      </div>
    </section>
    <section class="my-4">
      <h2 class="divider divider-neutral my-10 text-lg font-bold">
        Estamos contruyendo
      </h2>
      <ul class="my-2 flex w-full flex-col gap-4">
        {
          developmentProjects.map((project) => (
            <ProjectInDevelopment {...project} />
          ))
        }
      </ul>
    </section>
  </div>
</Layout>
